{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clang",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-Wall",
                "${workspaceFolder}//${fileBasename}",
                "-o",
                "tao"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}                                                                        
